# Network Configuration
WIFI_SSID="Your_WiFi_SSID"
WIFI_PASSPHRASE="Your_WiFi_Password"

# Access Point Configuration
AP_SSID="Your_AP_SSID"
AP_PASSPHRASE="Your_AP_Password"
AP_IP="192.168.4.1"

# Dynamic DNS Configuration
DDNS_HOSTNAME="your-hostname.example.com"
DDNS_USERNAME="your_username"
DDNS_PASSWORD="your_password"

# MQTT Configuration
MQTT_USER="mqtt_username"
MQTT_PASSWORD="mqtt_password"

# SSL/TLS Configuration
EMAIL_ADDRESS="your.email@example.com"

# OpenVPN Configuration
VPN_PORT="1194"

# Git Configuration
GIT_USERNAME="Your_GitHub_Username"
GIT_EMAIL="your.github@email.com"
GITHUB_TOKEN="your_github_personal_access_token"

# Project Paths
PROJECT_DIR="/path/to/your/project"
VENV_DIR="/path/to/your/venv"

# Database Configuration
DB_NAME="your_database_name"
DB_USER="your_database_user"
DB_PASSWORD="your_database_password"

# Web Server Configuration
WEB_PORT="80"
HTTPS_PORT="443"

# Monitoring Configuration
GRAFANA_PORT="3000"
PROMETHEUS_PORT="9090"

# VPN Configuration
VPN_CA_NAME="Your_CA_Name"
VPN_SERVER_NAME="Your_VPN_Server_Name"
VPN_CLIENT_NAME="Your_VPN_Client_Name"